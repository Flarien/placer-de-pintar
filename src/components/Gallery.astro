---
import SectionContainer from '../components/ui/SectionContainer.astro';
import BtnToGallery from './ui/BtnToGallery.astro';
import FullGalleryModal from '../components/FullGalleryModal.astro';
import obras from '../data/obras.json';
---

<SectionContainer>
  <!-- SECCIÓN CUADROS -->
  <section class='preview-section preview-cuadros'>
    <div class='preview-container'>
      <h2 class='section-title'>Cuadros</h2>

      <!-- TIGRE HERO -->
      <div class='hero-image-container'>
        <div class='hero-image'>
          <img
            src='/images/cuadros/cuadros_12.webp'
            alt='Tigre Hiperrealista'
            loading='lazy'
          />
          <div class='hero-overlay'>
            <h3>Tigre Hiperrealista</h3>
          </div>
        </div>
      </div>

      <!-- 4 CUADROS GRID -->
      <div class='grid-cuadros-small'>
        <div class='grid-item animate-item'>
          <img
            src='/images/cuadros/cuadros_08.webp'
            alt='Cuadro 2'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/cuadros/cuadros_19.webp'
            alt='Cuadro 3'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/cuadros/cuadros_18.webp'
            alt='Cuadro 4'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/cuadros/cuadros_10.webp'
            alt='Cuadro 5'
            loading='lazy'
          />
        </div>
      </div>

      <div class='flex-btn'>
        <BtnToGallery accion='cuadros'> Ver más cuadros </BtnToGallery>
      </div>
    </div>
  </section>

  <!-- SECCIÓN TEJAS (fondo accent, grid vertical) -->
  <section class='preview-section preview-tejas'>
    <div class='preview-container'>
      <h2 class='section-title section-title--light'>
        Tejas Coloniales Pintadas
      </h2>

      <div class='grid-tejas'>
        <div class='grid-item grid-item--vertical animate-item'>
          <img src='/images/tejas/tejas_14.webp' alt='Teja 1' loading='lazy' />
        </div>
        <div class='grid-item grid-item--vertical animate-item'>
          <img src='/images/tejas/tejas_13.webp' alt='Teja 2' loading='lazy' />
        </div>
        <div class='grid-item grid-item--vertical animate-item'>
          <img src='/images/tejas/tejas_16.webp' alt='Teja 3' loading='lazy' />
        </div>
        <div class='grid-item grid-item--vertical animate-item'>
          <img src='/images/tejas/tejas_17.webp' alt='Teja 4' loading='lazy' />
        </div>
      </div>
      <div class='flex-btn'>
        <BtnToGallery accion='tejas'> Ver más tejas </BtnToGallery>
      </div>
    </div>
  </section>

  <!-- SECCIÓN FRASES -->
  <section class='preview-section preview-frases'>
    <div class='preview-container'>
      <h2 class='section-title'>Cuadritos con Frases</h2>

      <div class='grid-frases'>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_01.webp'
            alt='Frase 1'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_13.webp'
            alt='Frase 2'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_15.webp'
            alt='Frase 3'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_16.webp'
            alt='Frase 4'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_19.webp'
            alt='Frase 5'
            loading='lazy'
          />
        </div>
        <div class='grid-item animate-item'>
          <img
            src='/images/frases/frases_20.webp'
            alt='Frase 6'
            loading='lazy'
          />
        </div>
      </div>
      <div class='flex-btn'>
        <BtnToGallery accion='frases'>
          Ver más cuadritos con frases</BtnToGallery
        >
      </div>
    </div>
  </section>
</SectionContainer>

<FullGalleryModal obras={obras} />

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  // Registrar el plugin ScrollTrigger
  gsap.registerPlugin(ScrollTrigger);

  // Esperar a que el DOM esté listo
  document.addEventListener('DOMContentLoaded', function () {
    // Animar todos los elementos con clase animate-item
    gsap.utils.toArray('.animate-item').forEach((item) => {
      gsap.fromTo(
        item as any,
        {
          opacity: 0,
          y: 100,
          scale: 0.7,
        },
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 0.6,
          ease: 'power2.out',
          scrollTrigger: {
            trigger: item as Element,
            start: 'top 80%',
            end: 'top -30%',
            toggleActions: 'play reverse play reverse',
            //markers: true
          },
        },
      );
    });
  });
</script>

<style>
  /* =========================
   BASE SECCIONES
========================= */
  .preview-section {
    padding: 6rem 3rem;
    position: relative;
    overflow: hidden;
  }

  .preview-cuadros {
    background: var(--white);
  }

  .preview-tejas {
    background: var(--accent);
  }

  .preview-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .preview-frases {
    margin: 5rem 6rem 1rem 6rem;
  }

  /* =========================
   TÍTULOS
========================= */
  .section-title {
    font-size: 3rem;
    font-weight: 300;
    color: var(--primary);
    letter-spacing: 2px;
    margin-bottom: 3rem;
    text-align: center;
    position: relative;
    animation: fadeInUp 0.8s ease-out;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 2px;
    background: var(--accent);
  }

  .section-title--light {
    color: var(--white);
  }

  .section-title--light::after {
    background: var(--white);
  }

  /* =========================
   HERO CUADRO PRINCIPAL
========================= */
  .hero-image-container {
    margin-bottom: 3rem;
    animation: revealFromScale 1.2s ease-out forwards;
  }

  .hero-image {
    position: relative;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    transition:
      transform 0.5s ease,
      box-shadow 0.5s ease;
  }

  .hero-image:hover {
    transform: translateY(-10px);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s ease;
  }

  .hero-image:hover img {
    transform: scale(1.08);
  }

  .hero-overlay {
    position: absolute;
    inset: auto 0 0 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.85));
    padding: 3rem 2rem;
    transform: translateY(100%);
    transition: transform 0.4s ease;
  }

  .hero-image:hover .hero-overlay {
    transform: translateY(0);
  }

  .hero-overlay h3 {
    color: white;
    font-size: 2rem;
    font-weight: 300;
  }

  /* =========================
   GRIDS
========================= */
  .grid-tejas {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .grid-frases {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  /* 4 cuadros chicos (rectangulares) */
  .grid-cuadros-small {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  /* =========================
   GRID ITEM BASE
========================= */
  .grid-item {
    position: relative;
    overflow: hidden;
    background: #f5f5f5;
    border-radius: 8px;
    transition:
      transform 0.4s ease,
      box-shadow 0.4s ease;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .grid-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
    z-index: 2;
  }

  .grid-item:hover img {
    transform: scale(1.1);
  }

  /* verticales (tejas) */
  .grid-item--vertical {
    aspect-ratio: 3 / 4;
  }

  /* cuadrados (frases) */
  .grid-frases .grid-item {
    aspect-ratio: 1 / 1;
  }

  /* rectangulares (cuadros chicos) */
  .grid-cuadros-small .grid-item {
    aspect-ratio: 4 / 3;
  }

  /* =========================
   BOTÓN
========================= */
  .flex-btn {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
    animation: fadeInUp 0.8s ease-out;
  }

  /* =========================
   RESPONSIVE
========================= */
  @media (max-width: 1024px) {
    .preview-section {
      margin: 5rem;
    }
    .grid-tejas,
    .grid-frases {
      margin: 0 4rem;
      grid-template-columns: repeat(2, 1fr);
    }

    .grid-cuadros-small {
      grid-template-columns: repeat(2, 1fr);
    }

    .section-title {
      font-size: 2.5rem;
    }

    .preview-frases {
      margin: 2rem 3rem 0.5rem 3rem;
    }
  }

  @media (max-width: 768px) {
    .preview-section {
      padding: 4rem 1.5rem;
      margin: 2rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .hero-image {
      aspect-ratio: 1 / 1;
    }

    .grid-tejas,
    .grid-frases,
    .grid-cuadros-small {
      grid-template-columns: 1fr;
      margin: 0 4rem;
    }

    /* en mobile los chicos vuelven a cuadrados */
    .grid-cuadros-small .grid-item {
      aspect-ratio: 1 / 1;
    }

    .preview-frases {
      margin: 1rem 1rem 0 1rem;
    }
  }

  /* =========================
   ANIMACIONES
========================= */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes revealFromScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
