---
interface Props {
  accion?: string;
}

const { accion } = Astro.props;
---

<button id='primaryBtn' onclick={accion ? `window.openFullGallery && window.openFullGallery('${accion}')` : undefined}>
  <span class='text'>
    <slot />
  </span>
</button>

<style>
  button {
    align-items: center;
    background-image: linear-gradient(144deg, #9f8056, #f3be42 50%, #9c7b4c);
    border: 0;
    border-radius: 8px;
    box-shadow: rgba(236, 252, 65, 0.2) 0 15px 30px -5px;
    box-sizing: border-box;
    color: var(--accent);
    display: flex;
    font-size: 16px;
    font-weight: 700;
    justify-content: center;
    line-height: 1em;
    max-width: 100%;
    min-width: 140px;
    padding: 2px;
    text-decoration: none;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.3s;
  }

  button:active,
  button:hover {
    outline: 0;
    color: white;
  }

  button span {
    background-color: rgba(255, 255, 255, 0.5);
    padding: 12px 20px;
    border-radius: 6px;
    width: 100%;
    height: 100%;
    transition: 300ms;
  }

  button:hover span {
    background: none;
  }

  button:active {
    transform: scale(0.9);
  }
</style>
